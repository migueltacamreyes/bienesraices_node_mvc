extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                .space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información General 
                    p.text-gray-600 Añade Informacion sobre la propiedad
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Titulo de Anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-blue-300(placeholder="Titulo de Propiedad" type="text" name="titulo" value= datos.titulo ? datos.titulo : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="descripcion") Descripcion
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-blue-300(placeholder="Colocar Descripción" type="text" name="descripcion")= datos.descripcion ? datos.descripcion : ''
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="categoria") Categoría
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="categoria")
                                option(value="") Seleccione Categoría
                                each categoria in categorias 
                                    option(value=categoria.id selected= datos.categoriaId ? datos.categoriaId == categoria.id ? true : false : null)= categoria.nombre 
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="precio")
                                option(value="") Seleccione Precio
                                each precio in precios 
                                    option(value=precio.id selected= datos.precioId ? datos.precioId == precio.id ? true : false : null)= precio.nombre 
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="habitaciones")
                                option(value="") Seleccione Habitaciones
                                - let n = 1;
                                while n < 6
                                    option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n}
                                    - n++

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="estacionamiento")
                                option(value="") Seleccione Estacionamiento
                                - let n1 = 1;
                                while n1 < 5
                                    option(value=n1 selected= datos.estacionamiento ? datos.estacionamiento == n1 ? true : false : null) #{n1}
                                    - n1++

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="wc") WC
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="wc")
                                option(value="") Seleccione WC
                                - let n2 = 1;
                                while n2 < 5
                                    option(value=n2 selected= datos.wc ? datos.wc == n2 ? true : false : null) #{n2}
                                    - n2++

                    div(class="mb-4")
                        h3(class="mb-4 text-lg leading-6 font-medium text-gray-600") Ubicación
                        p(class="text-gray-600 mb-4") Ubica la propiedad en el mapa
                        div(id="mapa", class="w-full h-80 mb-4")

                        div
                            p.calle= datos.calle ? datos.calle : ''
                        input(type="hidden" name="calle", id="calle" value= datos.calle ? datos.calle : '')
                        input(type="hidden" name="lat", id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng", id="lng" value= datos.lng ? datos.lng : '')

                    input(class="w-full py-3 bg-indigo-500 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar Cambios")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")





