extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
                    
        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-4(method="POST" action="olvide-password")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-blue-300(placeholder="Email de Registro" type="email" name="email")

                    div.flex.items-center.justify-between
                        a.text-indigo-400.text-xs(href="/auth/registro") ¿No tienes cuneta? Crea una
                        a.text-indigo-400.text-xs(href="/auth/login") ¿Tienes Cuenta? Inicia Sesión
                    
                    input(class="w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value= "Enviar Instrucciones")